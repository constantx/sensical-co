/////////////////////////////////////////////////////// Common Layout Helpers
.cover
  width: 100%
  height: auto

.poster
  @extend .cover
  display: block

.circular
  border-radius: 50%

.centered-content
  text-align: center

.centered-block
  margin-left: auto
  margin-right: auto

.amp
  font-style: italic
  font-family: "Baskerville", fontSerif
  font-weight: normal

// prevent FOUT
.wf-loading
  h1,h2,h3,h5,h6,p,a
    visibility: hidden

.wf-inactive
.wf-active
  h1,h2,h3,h5,h6,p,a
    visibility: visible



/////////////////////////////////////////////////////// MAIN
.tagline
  // setHeading(3.375)
  setHeading(2.25)
  padding: 1em 0 0
  text-align: center
  font-weight: bold
  @media only screen and (min-width: 375px)
    setHeading(3)
  @media only screen and (min-width: 768px)
    setHeading(5.063)
  @media only screen and (min-width: 1440px)
    setHeading(7.594)

.subtagline
  setHeading(1)
  @extend .sc
  padding: 1em 0
  text-align: center
  font-family: fontText
  font-weight: normal
  overflow: hidden
  color: lighten(colorText, 50%)
  @media only screen and (min-width: 768px)
    setHeading(1.5)

.nav-items
  list-style: none
  text-align: center

.nav-item
  display: inline-block
  margin: 0 0.5em
  @media only screen and (min-width: 769px)
    margin: 0 1em

.item-link
  border-bottom: none
  &:hover
    color: colorMain
    border-bottom: solid 5px colorMain
    margin-bottom: -5px

&.current
  .item-link
    border-bottom: solid 5px colorMain
    margin-bottom: -5px

  @media only screen and (min-width: 769px)
    margin: 0 1em
    letter-spacing: 0.05em

// keep a z-index to stay above the background screen
.main-header
.main-content
.main-footer
  position: relative
  z-index: 2

.main-header
  box-sizing: border-box
  position: fixed
  bottom: 0
  left: 0
  width: 100%
  z-index: 100
  padding: 1em
  background: colorBgr
  // nav
  //   padding: 1em 0

.main-content
  height: 100%

